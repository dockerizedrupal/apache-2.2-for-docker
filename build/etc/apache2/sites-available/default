<VirtualHost *:80>
	ServerName ${APACHE_SERVERNAME}
	ServerAlias *.${APACHE_SERVERNAME}

	DocumentRoot /apache-2.2.22/data
	VirtualDocumentRoot "/apache-2.2.22/data/%1"

	<Directory "/apache-2.2.22/data">
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		Allow from all
	</Directory>
</VirtualHost>