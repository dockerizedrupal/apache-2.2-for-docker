<VirtualHost *:80>
	ServerName ${APACHE_SERVERNAME}

	DocumentRoot /var/apache-2.2.22/www

	<Directory "/var/apache-2.2.22/www">
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		Allow from all
	</Directory>
</VirtualHost>

<VirtualHost *:80>
	ServerAlias *.${APACHE_SERVERNAME}

	VirtualDocumentRoot "/var/apache-2.2.22/www/%1"
</VirtualHost>