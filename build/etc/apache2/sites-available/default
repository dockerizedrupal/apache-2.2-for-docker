<VirtualHost *:80>
	ServerName ${APACHE_SERVERNAME}
	ServerAlias *.${APACHE_SERVERNAME}

	DocumentRoot /var/www
	VirtualDocumentRoot "/var/www/%1"

	<Directory "/var/www">
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		Allow from all
	</Directory>
</VirtualHost>