<IfModule mod_fastcgi.c>
  AddHandler php .php

  Alias /php52 /apache-2.2.22/php55
  FastCgiExternalServer /apache-2.2.22/php55 -host <%= @php55 %>:5517 -idle-timeout 300 -pass-header Authorization

  <Location /php55>
    Order deny,allow
    Deny from all
    Allow from env=REDIRECT_STATUS
  </Location>

  Action php /php55
</IfModule>
