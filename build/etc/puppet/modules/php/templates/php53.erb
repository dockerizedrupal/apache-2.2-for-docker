<IfModule mod_fastcgi.c>
  AddHandler php .php

  Alias /php52 /apache-2.2.22/php53
  FastCgiExternalServer /apache-2.2.22/php53 -host <%= @php53 %>:9000 -idle-timeout 300 -pass-header Authorization

  <Location /php53>
    Order deny,allow
    Deny from all
    Allow from env=REDIRECT_STATUS
  </Location>

  Action php /php53
</IfModule>
