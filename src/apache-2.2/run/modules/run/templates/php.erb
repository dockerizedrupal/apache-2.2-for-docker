<IfModule mod_fastcgi.c>
  AddHandler php .php

  Alias /php /apache-2.2/php
  FastCgiExternalServer /apache-2.2/php -host <%= @php_host %> -idle-timeout <%= @timeout %> -pass-header Authorization

  <Location /php>
    Order deny,allow
    Deny from all
    Allow from env=REDIRECT_STATUS
  </Location>

  Action php /php
</IfModule>
