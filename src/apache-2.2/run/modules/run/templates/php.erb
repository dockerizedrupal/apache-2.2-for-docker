<IfModule mod_fastcgi.c>
  AddHandler php .php

  Alias /php /apache/php
  FastCgiExternalServer /apache/php -host <%= @php_host %> -idle-timeout <%= @timeout %> -pass-header Authorization

  <Location /php>
    Order deny,allow
    Deny from all
    Allow from env=REDIRECT_STATUS
  </Location>

  Action php /php
</IfModule>
