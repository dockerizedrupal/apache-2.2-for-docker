<IfModule mod_fastcgi.c>
  AddHandler php .php

  Alias /php53 /httpd/php53
  FastCgiExternalServer /httpd/php53 -host <%= @php53_port_9000_tcp %> -idle-timeout 300 -pass-header Authorization

  <Location /php53>
    Order deny,allow
    Deny from all
    Allow from env=REDIRECT_STATUS
  </Location>

  Action php /php53
</IfModule>
