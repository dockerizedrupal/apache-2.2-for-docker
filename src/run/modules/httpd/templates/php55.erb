<IfModule mod_fastcgi.c>
  AddHandler php .php

  Alias /php55 /httpd-2.2.22/php55
  FastCgiExternalServer /httpd-2.2.22/php55 -host <%= @php55_port_9000_tcp %> -idle-timeout 300 -pass-header Authorization

  <Location /php55>
    Order deny,allow
    Deny from all
    Allow from env=REDIRECT_STATUS
  </Location>

  Action php /php55
</IfModule>
